{
  "overrides": [
    {
      "files": ["*.js"],
      "extends": ["eslint:recommended"],
      "parserOptions": {
        "ecmaVersion": "latest"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "parserOptions": {
        "project": ["./tsconfig.json", "./packages/*/tsconfig.json"]
      }
    }
  ],
  "rules": {
    "@next/next/no-html-link-for-pages": "off"
  }
} 